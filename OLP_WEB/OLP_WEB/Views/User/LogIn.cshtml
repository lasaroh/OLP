@model SharedModels.User
@using OLP_WEB.Common;
@using OLP_WEB.Controllers;
@{
	ViewData["Title"] = "LogIn";
}
<h1>Iniciar Sesión</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-controller="API" asp-action="LogIn" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Email" class="control-label"></label>
				<input asp-for="Email" class="form-control" required />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" class="form-control" type="password" required />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group my-3">
				<input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
			</div>
		</form>
		@if (!string.IsNullOrEmpty(ViewBag.msgErr))
		{
			<div class="alert alert-info">@ViewBag.msgErr</div>
		}
	</div>
</div>